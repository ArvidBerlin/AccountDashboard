@model UserViewModel

<div class="user card" data-project-id="@Model.Id">
	<div class="card-member">
		<div class="card-header">
			<div id="project-actions-container">
				<button type="button" data-type="dropdown" data-target="#project-dropdown-@Model.Id" class="btn-action">
					<i class="fa-solid fa-ellipsis"></i>
				</button>
				<div id="project-dropdown-@Model.Id" class="dropdown">
					<div class="dropdown-body">
						<nav class="dropdown-actions">
							<button data-type="modal" data-target="#editProjectModal" class="dropdown-action">
								<i class="fa-duotone fa-solid fa-pen-to-square"></i>
								<span>Edit</span>
							</button>
							<button class="dropdown-action" href="#">
								<i class="fa-duotone fa-solid fa-user-plus" style="--fa-primary-opacity: 0.4; --fa-secondary-opacity: 1;"></i>
								<span>Add Member</span>
							</button>
						</nav>
						<div class="dropdown-divider"></div>
						<nav class="dropdown-actions">
							<a class="dropdown-action remove">

								<form asp-controller="Projects" asp-action="Delete" method="post">
									<input type="hidden" name="id" value="@Model.Id" />
									<button type="submit" class="btn btn-close">
										<i class="fa-duotone fa-solid fa-trash"></i>
										<span>Delete Project</span>
									</button>
								</form>

							</a>
						</nav>
					</div>
				</div>
			</div>
		</div>
		<div class="image">
			@if (!string.IsNullOrEmpty(Model.UserImage))
			{
				<img src="https://cms24asp1.blob.core.windows.net/uploads/@Model.UserImage" />

				@* <img src="https://cms24asp1.blob.core.windows.net/uploads/@Model.UserImage" alt="template user" /> *@
				@* <img src="/images/uploads/@Model.ImageFileName" alt="template user" /> *@
			}
			else
			{
				<img src="~/images/profiles/user-template-male-greenpink.svg" alt="template user" />
			}
		</div>
		<h4 class="name">@Model.FirstName @Model.LastName</h4>
		<div class="jobtitle">@Model.JobTitle</div>
		<div class="email">@Model.Email</div>
		<div class="phone">@Model.PhoneNumber</div>
		<div class="role"></div>
	</div>
</div>
