@model AddUserViewModel

<div id="addUserModal" class="modal">
	<div class="card">
		<div class="card-header">
			<h3>Add Member</h3>
			<button type="button" class="btn-close" data-type="close" data-close="true" data-target="#addUserModal"></button>
		</div>
		<div class="card-body">
			<form asp-controller="Users" asp-action="Add" method="post" enctype="multipart/form-data" novalidate>
				<div class="form-horizontal-group">
					<div class="form-group">
						<label asp-for="FirstName"></label>
						<input asp-for="FirstName" />
					</div>

					<div class="form-group">
						<label asp-for="LastName"></label>
						<input asp-for="LastName" />
					</div>
				</div>
				
				<div class="form-group">
					<label asp-for="Email"></label>
					<input asp-for="Email" />
				</div>

				<div class="form-group">
					<label asp-for="PhoneNumber"></label>
					<input asp-for="PhoneNumber" />
				</div>

				<div class="form-group">
					<label asp-for="JobTitle"></label>
					<input asp-for="JobTitle" />
				</div>

				<div class="form-group">
					<label asp-for="Address"></label>
					<input asp-for="Address" />
				</div>

				<div class="form-horizontal-group">
					<div class="form-group">
						<label asp-for="BirthDate" class="form-label"></label>
						<input asp-for="BirthDate" class="form-input" type="date" />
					</div>
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-submit">Add Contact</button>
				</div>
			</form>
		</div>
		<div class="card-footer"></div>
	</div>
</div>
